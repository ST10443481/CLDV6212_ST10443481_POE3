@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section bg-light p-5 rounded-3 mb-5">
    <div class="text-center">
        <h1 class="display-5 fw-bold mb-3">Welcome to ABC Retailers</h1>
        <p class="lead mb-4">Quality products at great prices</p>
        <a class="btn btn-primary btn-lg px-4" asp-controller="Product" asp-action="Index">
            <i class="bi bi-bag-check me-2"></i>Shop Now
        </a>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card border-0 text-center py-4">
            <div class="card-body">
                <i class="bi bi-box-seam text-primary fs-1 mb-3"></i>
                <h3 class="fw-bold">@Model.ProductCount</h3>
                <p class="text-muted mb-0">Products Available</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 text-center py-4">
            <div class="card-body">
                <i class="bi bi-people text-success fs-1 mb-3"></i>
                <h3 class="fw-bold">@Model.CustomerCount</h3>
                <p class="text-muted mb-0">Happy Customers</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 text-center py-4">
            <div class="card-body">
                <i class="bi bi-cart-check text-info fs-1 mb-3"></i>
                <h3 class="fw-bold">@Model.OrderCount</h3>
                <p class="text-muted mb-0">Orders Completed</p>
            </div>
        </div>
    </div>
</div>

<h2 class="h4 mb-4">Featured Products</h2>

@if (Model.FeaturedProducts.Any())
{
    <div class="row g-4">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top product-image" alt="@product.ProductName">
                    }
                    else
                    {
                        <div class="card-img-top product-image bg-light d-flex align-items-center justify-content-center">
                            <i class="bi bi-image text-muted fs-1"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text text-muted small">@(product.Description?.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-primary mb-0">@product.Price.ToString("C")</span>
                            <small class="text-muted">Stock: @product.StockAvailable</small>
                        </div>
                    </div>
                    <div class="card-footer border-0 bg-white pt-0">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@product.Id">
                                <input type="hidden" name="quantity" value="1">
                                <button type="submit" class="btn btn-primary w-100" disabled="@(product.StockAvailable == 0)">
                                    <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Login" asp-action="Index" class="btn btn-outline-primary w-100">
                                Login to Purchase
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center py-4">
        <i class="bi bi-info-circle me-2"></i>No products available at the moment.
    </div>
}